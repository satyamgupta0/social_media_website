<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Requests</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com" />
    <link rel="stylesheet" href="home_new.css" />
    <link rel="stylesheet" href="style/request.css">
</head>





<body>
    <!-- -------------------------header------------------------- -->
    <nav>
        <div class="container">
            <div class="left_navabar">
                <img src="images/Logo1.png" id="logo" class="images" />
                <h3 id="name2">Friends.com</h3>
            </div>
            <div class="search_bar">
                <i class="uil uil-search"></i>
                <input type="search" placeholder="Search For a Friend" />
            </div>
            <div class="mid">
                <button id="Active">
                    <a href="/request" >Request</a>
                </button>&nbsp&nbsp
                <button>
                    <a href="/suggestions" id="butn">Suggestions</a>
                </button>
            </div>
            <div class="right_navbar">
                
                <li>
                    <a href="/home" class="btn"><i class="uil uil-home"></i></a>
                </li>
                <li>
                    <a href="/upload" class="btn"><i class="uil uil-plus"> </i></a>
                </li>
                <li>
                    <a href="/chat" class="btn"><i class="uil uil-chat"></i></a>
                </li>
                <li>
                    <a href="/profile" class="btn"><img src="images/man.png" alt="" class="images" id="profile" /></a>
                </li>
                <li>
                    <a href="/logout" class="btn"><i class="uil uil-exit"></i></a>
                </li>
            </div>
        </div>
    </nav>

    <main>
        <div class="container2">
            <div class="header">
                <h3>Requests</h3>
            </div>

            <% pendingFriends.forEach((item)=>{ %> 
            <div class="head">
                <div class="profile_photo">
                    <img src="<%= item.image %> " alt="" class="images" />
                </div>
                <div class="name">
                    <h3><%= item.fullname %> </h3>
                    <!-- <small>3 Mutual Friends</small> -->
                </div>
                <div class="button">
                    <a href=""> Confirm </a>
                </div>
                <div class="button1">
                    <a href=""> Decline </a>
                </div>
            </div>
            <%});%>
            

            
        </div>
    </main>
</body>

</html>